# =================================
# ExpenseBuddy Environment Variables
# =================================

# Basic Application Configuration
APP_CLIENT_PORT=3000
APP_SERVER_PORT=8000
DATABASE_PORT=27017
API_HOST=0.0.0.0
MACHINE_IP=

# API Keys
REACT_APP_APILAYER_KEY=your_apilayer_key_here

# =================================
# JWT Authentication (REQUIRED)
# =================================
# Generate 32+ character random strings for security
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

JWT_ACCESS_SECRET=your-super-secret-access-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_EMAIL_SECRET=your-super-secret-email-verification-key-min-32-chars

# =================================
# Email Configuration (REQUIRED)
# =================================
# Choose SMTP (Gmail) or other email provider

# Gmail SMTP Configuration (recommended)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
FROM_EMAIL=your-email@gmail.com

# Application URLs
CLIENT_URL=http://localhost:3000
APP_NAME=ExpenseBuddy

# =================================
# Database & Redis (Auto-configured)
# =================================
# MongoDB and Redis are automatically configured via Docker
# No additional configuration needed for development

# =================================
# Production Only
# =================================
# Uncomment and configure for production deployment

# BCRYPT_ROUNDS=12
# JWT_ACCESS_EXPIRES_IN=1h
# JWT_REFRESH_EXPIRES_IN=7d
# EMAIL_VERIFICATION_EXPIRES_HOURS=24
# PASSWORD_RESET_EXPIRES_HOURS=1

# Production Email Service (SendGrid alternative)
# SENDGRID_API_KEY=your-sendgrid-api-key
# EMAIL_FROM=noreply@yourdomain.com

# Security
# HTTPS=true
# CORS_ORIGIN=https://yourdomain.com
